#DEFAULT vesamenu.c32
#MENU INCLUDE pxelinux.cfg/instapxe.conf
DEFAULT INSTAPXE
TIMEOUT 0 #100= 10 seconds
PROMPT 0
#ONTIMEOUT INSTAPXE

LABEL INSTAPXE
	MENU LABEL ^0) instaPXE Agent
	KERNEL http://172.17.1.3/instapxe_agent/instapxe.1
        APPEND initrd=http://172.17.1.3/instapxe_agent/instapxe.2 root=live:http://172.17.1.3/instapxe_agent/squashfs.img rootfstype=auto rd.live.image rd.writable.fsimg rw DEBUG=0 share_type=nfs share_location=172.17.1.3:/instapxe_agent share_opts=nolock loglevel=7 BUILD=0 selinux=0 edd=off rd.md=0 rd.dm=0 quiet – share_script=instapxe_agent_src/instapxe_agent.sh

LABEL DSU
	MENU LABEL ^1) Dell System Update (DSU)
	KERNEL http://172.17.1.3/dsu/sa.1
        APPEND initrd=http://172.17.1.3/dsu/sa.2 root=live:http://172.17.1.3/dsu/LiveOS/squashfs.img rootfstype=auto rd.live.image rd.writable.fsimg rw DEBUG=0 share_type=nfs share_location=172.17.1.3:/dsu share_opts=nolock loglevel=7 BUILD=0 selinux=0 edd=off rd.md=0 rd.dm=0 quiet – share_script=drm_files/apply_bundles.sh




LABEL SUMGEN8
        MENU LABEL ^2) HP Smart Update Manager (SUM)-- Gen 8
        KERNEL boot/sum_gen8/vmlinuz
        APPEND initrd=boot/sum_gen8/initrd.img media=net root=/dev/ram0 splash quiet hp_fibre showopts TYPE=AUTOMATIC AUTOPOWEROFFONSUCCESS=yes AUTOREBOOTONSUCCESS=no iso1=nfs://172.17.1.3/sum_gen8 iso1opts=nolock iso1mnt=/mnt/bootdevice


LABEL SUMGEN7
        MENU LABEL ^3) HP Smart Update Manager (SUM)-- Gen 7
        KERNEL boot/sum_gen7/vmlinuz
        APPEND initrd=boot/sum_gen7/initrd.img media=net root=/dev/ram0 splash quiet hp_fibre showopts TYPE=AUTOMATIC AUTOPOWEROFFONSUCCESS=yes AUTOREBOOTONSUCCESS=no iso1=nfs://172.17.1.3/sum_gen7 iso1opts=nolock iso1mnt=/mnt/bootdevice


LABEL SUMLATEST
        MENU LABEL ^4) HP Smart Update Manager (SUM)-- Latest
        KERNEL boot/sum_latest/vmlinuz
        APPEND initrd=boot/sum_latest/initrd.img media=net root=/dev/ram0 splash quiet hp_fibre showopts TYPE=AUTOMATIC AUTOPOWEROFFONSUCCESS=yes AUTOREBOOTONSUCCESS=no iso1=nfs://172.17.1.3/sum_latest iso1opts=nolock iso1mnt=/mnt/bootdevice


LABEL WDS
    MENU LABEL ^5) Windows Deployment Services (WDS)
    COM32 pxechn.c32
    append 172.17.1.100::Boot\x64\wdsnbp.com -W

MENU BEGIN
MENU LABEL ^6) Linux Distros
	LABEL Back
		MENU LABEL Back..
                TEXT HELP
                Return to previous menu.
                ENDTEXT
                MENU EXIT
                MENU SEPARATOR
		
	MENU BEGIN Ubuntu
	MENU TITLE Ubuntu 
        	LABEL Back
        	MENU LABEL Back..
        	TEXT HELP
        	Return to previous menu.
        	ENDTEXT
        	MENU EXIT
        	MENU SEPARATOR
        	MENU INCLUDE boot/ubuntu/ubuntu.menu
	MENU END

        MENU BEGIN CentOS
        MENU TITLE CentOS
                LABEL Back
                MENU LABEL Back..
                TEXT HELP
                Return to previous menu.
                ENDTEXT
                MENU EXIT
                MENU SEPARATOR
                MENU INCLUDE boot/centos/centos.menu
        MENU END
MENU END

LABEL VMware
        MENU LABEL ^7) VMware ESXi
        COM32 pxechn.c32
        append boot/vmware/pxelinux.0

MENU BEGIN Tools and Utilities
MENU LABEL ^8) Tools and Utilities
        LABEL Back
        MENU LABEL Back..
        TEXT HELP
        Return to previous menu.
        ENDTEXT
        MENU EXIT
        MENU SEPARATOR
        MENU INCLUDE boot/utilities/utilities.menu
MENU END

LABEL BootLocal
	MENU LABEL ^9) BootLocal
        localboot 0
        TEXT HELP
        Boot to local hard disk.
        ENDTEXT

LABEL reboot
	MENU LABEL ^r) Reboot
	COM32 reboot.c32

LABEL poweroff
	MENU LABEL ^f) Power off
	COM32 poweroff.c32
